#nav.col-sm-4.col-md-4.col-lg-3
	.hidden-sm-up.clearfix.p-y-1
		a.navbar-toggler.pull-xs-left(href="#{host}") #{siteName}
		button.navbar-toggler.pull-xs-right(type='button', data-toggle='collapse' data-target='#menus') &#9776;
		.p-y-3.hidden-sm-down

	nav#menus.collapse

		.p-y-1
		.lists.text-sm-right
			.hidden-sm-down
				a.font-weight-bold.form-control-lg(href="#{host}") #{siteName}
				hr

			form(action='#{host}/s')
				.form-group
					.input-group
						input.form-control(name='title', type='search')
						span.input-group-btn
							button.btn.btn-secondary(type='submit') search

			- for(var k = 0, lenk = cats.length;k < lenk;k ++) {
				- var cat1 = cats[k]
				- var url = createUrl(cat1, host, publicRoute.cat)
				- var active = url.replace(host, '') === path?'active':''

				a(class='#{active}', title='#{cat1.desc}', href='#{url}')
					| #{cat1.name}
					- if(active)
						span.sr-only (current)
			-	}

			- if(user)
				a(href='#{host}/logout') logout
			- else
				a(href='#{host}/login') login
		.p-y-1.hidden-sm-up
